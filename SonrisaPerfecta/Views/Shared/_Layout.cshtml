<!--Layout para todo el contenido de la interfaz gráfica de usuario, excepto para la pantalla de inicio de sesión-->
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")

    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />

    <!--ICONOS-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/solid.css" integrity="sha384-QokYePQSOwpBDuhlHOsX0ymF6R/vLk/UQVz3WHa6wygxI5oGTmDTv8wahFOSspdm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/regular.css" integrity="sha384-FKw7x8fCxuvzBwOJmhTJJsKzBl8dnN9e2R4+pXRfYoHivikuHkzWyhKWDSMcGNK8" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/brands.css" integrity="sha384-n9+6/aSqa9lBidZMRCQHTHKJscPq6NW4pCQBiMmHdUCvPN8ZOg2zJJTkC7WIezWv" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/fontawesome.css" integrity="sha384-vd1e11sR28tEK9YANUtpIOdjGW14pS87bUBuOIoBILVWLFnS+MCX9T6MMf0VdPGq" crossorigin="anonymous">
    <!--./ICONOS-->

    <!--Barra de navegación-->
    <link href="~/Content/bootsnip/bootsnip.css" rel="stylesheet" />
    <script src="~/Content/bootsnip/bootsnip.js"></script>
    <!--./Barra de navegación-->

    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/jquery-3.2.1.slim.min.js"></script>
    <script src="~/Content/bootstrap/js/popper.min.js"></script><!--Barra de navegación-->

    @Scripts.Render("~/bundles/jquery")

    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/datepicker/locales/bootstrap-datepicker.es.min.js"></script>

</head>
<body>
    @RenderBody()
    @RenderSection("scripts", required: false)

    <!--Contenido de la barra de navegación-->
    <div class="navbar-fixed-top">
        <!--Contenido superior del encabezado para-->
        <div class="top-head left">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <h1>Pr&oacutetesis GO<small>Especialistas de alta calidad</small></h1>
                    </div>
                </div>
            </div>
        </div>
        <!--./Contenido superior del encabezado para-->
        <!--Menús de navegación inferior-->
        <section class="top-nav">
            <nav class="navbar navbar-expand-lg py-0">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="exCollapsingNavbar2">
                        <ul class="nav navbar-nav ">
                            <li class="nav-item">@Html.ActionLink("Inicio", "Inicio", "Inicio")</li>
                            <li class="nav-item">@Html.ActionLink(" Agendar cita", "AgendarCita", "AgendarCita")<span class="sr-only"></span></li>
                            <li class="nav-item">@Html.ActionLink(" Nuevo paciente", "RegistrarPaciente", "RegistrarPaciente")</li>
                            <li class="nav-item">@Html.ActionLink(" Entrega protesis", "Tratamiento", "Tratamiento")</li>
                            <li class="nav-item">@Html.ActionLink("Reportes Internos", "Reporte", "Reporte")</li>
                        </ul>
                    </div>
                </div>
            </nav>
        </section>
        <!--./Menús de la barra de navegación hubicados en la parte inferior-->
    </div>
    <!--./Contenido de la barra de navegación-->
</body>

</html>

<script>
    $('.datepicker').datepicker({
        format: 'dd/mm/yyyy',
        languaje: "es",
        autoclose: true
    });
</script>
