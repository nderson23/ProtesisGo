                        <div class="card-body">
                            <div class="news-title">
                                <h2 class=" title-small"><a href="#">@Html.ActionLink("Agendar cita por primera vez", "AgendarCita", "AgendarCita")</a></h2>
                            </div>
                        </div>
                    </div>
                    <div class="card">
